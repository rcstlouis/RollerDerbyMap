{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2021",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules", "**/typings/**"]
}
